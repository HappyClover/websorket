<script>
    const route = "<%= route %>";
    const code = "<%= code %>";

    var scheme = null;
    const android_url = "intent://scan/#Intent;scheme=wingstation;package=com.shability.wingstation;end";
    const ios_url = "itms://itunes.apple.com/us/app/apple-store/1548249801";

    switch (route){
        case "qr":
            scheme = "wingstation://qr";
            action_app(scheme, ios_url, android_url);
            break;

        case "station":
            scheme = "wingstation://station?code="+code;
            action_app(scheme, ios_url, android_url);
            break;

        default:
            alert("잘못된 경로입니다.");
            window.close();
    }

    function mo_chk(){
        var os;
        var mobile = (/iphone|ipad|ipod|android/i.test(navigator.userAgent.toLowerCase()));
        if (mobile) {
            var userAgent = navigator.userAgent.toLowerCase();
            if (userAgent.search("android") > -1){
                return os = "android";
            }else if ((userAgent.search("iphone") > -1) || (userAgent.search("ipod") > -1) || (userAgent.search("ipad") > -1)){
                return os = "ios";
            }else{
                return os = "otehr";
            }
        } else {
            return os = "pc";
        }
    }

    function action_app(url_scheme, ios_url, android_url){
        var result_mo_chk = mo_chk();

        if(result_mo_chk!=="pc"){
            setTimeout( function() {
                window.open(url_scheme);
            }, 5000);
            if(result_mo_chk === "ios"){
                location.href = ios_url;
            } else {
                location.href = android_url
            }
        } else {
            alert("PC는 지원하지 않습니다.");
            window.close();
        }
    }
</script>
